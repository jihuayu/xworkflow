{
  "version": "0.1.0",
  "nodes": [
    {
      "id": "start",
      "data": {
        "type": "start",
        "title": "Start",
        "variables": [
          { "variable": "query", "label": "Query", "type": "string", "required": true },
          { "variable": "label", "label": "Label", "type": "string", "required": true }
        ]
      }
    },
    {
      "id": "llm1",
      "data": {
        "type": "llm",
        "title": "LLM Streaming",
        "model": { "provider": "openai", "name": "gpt-4o" },
        "prompt_template": [
          { "role": "user", "text": "{{#start.query#}}" }
        ],
        "stream": true
      }
    },
    {
      "id": "tmpl",
      "data": {
        "type": "template-transform",
        "title": "Mix Template",
        "template": "{{ label }}: {{ stream_text }}",
        "variables": [
          { "variable": "label", "value_selector": ["start", "label"] },
          { "variable": "stream_text", "value_selector": ["llm1", "text"] }
        ]
      }
    },
    {
      "id": "end",
      "data": {
        "type": "end",
        "title": "End",
        "outputs": [
          { "variable": "result", "value_selector": ["tmpl", "output"] }
        ]
      }
    }
  ],
  "edges": [
    { "source": "start", "target": "llm1" },
    { "source": "llm1", "target": "tmpl" },
    { "source": "tmpl", "target": "end" }
  ]
}
